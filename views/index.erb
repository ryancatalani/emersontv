        <div class="wrap">
            <header>
                <h1>Emerson TV Channels</h1>
            </header>

            <div class="wrap_inner">
                <table id="channels">
                <% @channels.each do |channel| %>
                    <tr>
                        <td><%= channel[0] %></td>
                        <td>
                            <%= channel[1] %>
                            <% if channel[2] %>
                                <div class="current_show"><%= channel[2][0] %> (<%= channel[2][1] %>)</div>
                            <% end %>
                        </td>
                    </tr>
                <% end %>
                </table>
            </div>

            <footer>
                A project by <a href="http://ryancatalani.com">Ryan Catalani</a> &bull; <a href="http://twitter.com/magicofpi">@magicofpi</a>.
                <br/>TV show data from <a href="http://tvlistings.aol.com/listings/ma/boston/emerson-college/MA63993">AOL</a>. Source code on <a href="#">Github</a>.
            </footer>
        </div>

