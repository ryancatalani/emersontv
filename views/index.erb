        <div class="wrap">
            <header>
                <h1>Emerson TV Channels</h1>
                <p><a href="http://tvlistings.aol.com/listings/ma/boston/emerson-college/MA63993">See a full listing of TV shows here.</a></p>
            </header>

            <div class="wrap_inner">
                <table id="channels">
                <% @channels.each do |channel| %>
                    <tr>
                        <td><%= channel[0] %></td>
                        <td>
                            <%= channel[1] %>
                            <% if channel[2] %>
                                <div class="current_show"><%= channel[2][0] %> (<%= channel[2][1] %>)</div>
                            <% end %>
                        </td>
                    </tr>
                <% end %>
                </table>
            </div>

            <footer>
                <div class="fb-like" data-href="http://emersontv.ryancatalani.com/" data-send="false" data-width="225" data-show-faces="false"></div>
